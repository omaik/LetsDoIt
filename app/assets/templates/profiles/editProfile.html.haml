%div.col-sm-10.col-sm-offset-1{'class':'edit-profile-class'}
  %md-card
    %md-toolbar
      %h2.md-headline Edit profile
    %md-card-content
      %form{'name':'editProfile', 'ng-submit':'updateProfile(avatar)', 'multipart':'true' }
        %div.col-sm-4.col-md-offset-1{'class':'edit-profile-class'}
          %div{'ng-messages':'editProfile.name.$error', 'role':'alert', 'class':'errors'}
          %p
            .alert.alert-danger{'ng-show': 'errHandle'}
              %p{'ng-bind': 'profileErrMsg'}
          %md-input-container.md-block
            %input{'ng-model': 'profile.first_name', type: 'text', 'placeholder':'First name', 'maxlength':'30', 'ng-pattern':'formatPattern', 'name':'fName'}
            %div{'ng-messages':'editProfile.fName.$error', 'role':'alert', 'class':'errors'}
              %div{'ng-repeat':'(type, message) in errorMessages'}
                %div{'ng-message-exp':'type'}
                  First name {{message}}

          %md-input-container.md-block
            %input{'ng-model': 'profile.last_name', type: 'text', 'placeholder':'Last name', 'maxlength':'30', 'ng-pattern':'formatPattern', 'name':'lName'}
            %div{'ng-messages':'editProfile.lName.$error', 'role':'alert', 'class':'errors'}
              %div{'ng-repeat':'(type, message) in errorMessages'}
                %div{'ng-message-exp':'type'}
                  Last name {{message}}

          %md-input-container.md-block
            %md-select{'ng-model': 'profile.sex', 'placeholder':'Sex'}
              %md-option{value: 'Male'} Male
              %md-option{value: 'Female'} Female
              %md-option{value: 'No'} -

          %md-input-container
            %md-select{'ng-model': 'profile.day', 'placeholder':'Day'}
              %md-option{ 'ng-repeat': 'd in day', value: '{{d}}' } {{d}}

          %md-input-container
            %md-select{'ng-model': 'profile.month', 'placeholder':'Month'}
              %md-option{ 'ng-repeat': 'm in month', value: '{{m}}' } {{m}}

          %md-input-container
            %md-select{'ng-model': 'profile.year', 'placeholder':'Year'}
              %md-option{ 'ng-repeat': 'y in year', value: '{{y}}' } {{y}}

          %md-input-container.md-block
            %input{'ng-model': 'profile.country', type: 'text', 'placeholder':'Country', 'maxlength':'30', 'name':'country', 'ng-pattern':'formatPattern'}
            %div{'ng-messages':'editProfile.country.$error', 'role':'alert', 'class':'errors'}
              %div{'ng-repeat':'(type, message) in errorMessages'}
                %div{'ng-message-exp':'type'}
                  Country {{message}}

          %md-input-container.md-block
            %input{'ng-model': 'profile.city', type: 'text', 'placeholder':'City', 'maxlength':'30', 'name':'city','ng-pattern':'formatPattern'}
            %div{'ng-messages':'editProfile.city.$error', 'role':'alert', 'class':'errors'}
              %div{'ng-repeat':'(type, message) in errorMessages'}
                %div{'ng-message-exp':'type'}
                  City {{message}}
        %div.col-sm-2.col-sm-offset-1{'class':'edit-profile-class'}
          %label Photo:
          %br
          %input{type: 'file', 'ngf-select':'', 'ng-model':'avatar', 'id':'fileInput'}
          .cropArea{'ng-show':'avatar'}
            %img-crop.img-responsive{'image':'image.myImage', 'result-image':'image.croppedImage'}
          %div{'ng-show':'avatar'}Cropped Image:
          %img#cropped{'ng-src':'{{image.croppedImage}}', 'ng-show':'avatar'}
          %btn.thumb{ 'ng-click':'avatar = nill', 'ng-show':'avatar'} Remove
          %br
          %br
        %div.col-sm-6.col-sm-offset-6{'class':'edit-profile-class'}
          %input.btn.btn-default{type: 'submit', value: 'Save'}
