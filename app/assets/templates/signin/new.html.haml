%div.container{'class':'bckgrndpic', 'id':'loginbox'}
  .row
    %div.col-md-3.col-md-offset-1.col-sm-4.col-sm-offset-1.col-xs-8.col-xs-offset-2{'class':'authclass'}
      %h1 {{ 'Login' | translate }}:
      %div.alert.alert-danger{'ng-show':'err.isError'}
        %div{'ng-repeat':'(field, error) in err.errors'}
          {{error}}
      %form{'name':'signInForm'}
        .error{'ng-show':'error.message'}
        %div
          %md-input-container.md-block
            %label {{'Email_or_Username' | translate }}
            %input{'type':'text','ng-model':'user.login', 'required':'required', 'name':'loginField', 'autocomplete':'off', 'minlength':'6', 'maxlength':'30'}
            %div{'ng-messages':'signInForm.loginField.$error', 'role':'alert', 'class':'errors'}
              %div{'ng-repeat':'(type, message) in errorMessages'}
                %div{'ng-message-exp':'type'}
                  {{'Email_or_Username' | translate }} {{ message | translate}}
        %div
          %md-input-container.md-block
            %label {{'Password' | translate }}
            %input{'type':'password','ng-model':'user.password', 'required':'required', 'name':'passwordField', 'autocomplete':'off', 'minlength':'8', 'maxlength':'30'}
            %div{'ng-messages':'signInForm.passwordField.$error', 'role':'alert', 'class':'errors'}
              %div{'ng-repeat':'(type, message) in errorMessages'}
                %div{'ng-message-exp':'type'}
                  {{'Password' | translate }} {{ message | translate}}
        %div
          %p
            %a{'ui-sref': '#', 'title': 'I forgot my password'}
              {{'I_Forgot_my_Password' | translate }}
          %p
            %a{'ui-sref': 'confirmation'}
              {{ 'dont_receive_conf' | translate }}
        %div
          %button.btn.btn-block.btn-primary{'ng-click':'login()', 'ng-disabled':'signInForm.$invalid'} {{ 'Login' | translate }}
        %div
          %br
        %div
          %a.btn.btn-block.btn-social.btn-facebook{href:'/users/auth/facebook'}
            %span.fa.fa-facebook
            {{ 'Sign_in_with_Facebook' | translate }}
        %div
          %br
          %p
            {{ 'New_User' | translate }}
            %a{'ui-sref': 'signUp', 'title': 'SignUp Page'}
              {{ 'Sign_Up' | translate }}
%div{'class':'bckgrndbox', 'id':'aboutbox'}
  %p
    {{ 'lets_do_it' | translate }}
%div{'class':'bckgrndpic', 'id':'communicatetxt'}
  %h2
    {{ 'communic' | translate }}
%div{'class':'bckgrndbox'}
  %h2 {{ 'communic' | translate }}
  %p {{ 'comunic_text' | translate }}
%div{'class':'bckgrndpic', 'id':'accesstxt'}
  .row
    %div.col-sm-4.col-sm-offset-7.col-xs-10.col-xs-offset-1
      %h2 {{ 'access_from' | translate }}
%div{'class':'bckgrndbox'}
  %h2 {{ 'access_from' | translate }}
  %p {{ 'access_text' | translate }}
  %h3 {{ 'payments' | translate }}
