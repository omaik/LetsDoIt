%div.container
  %div.col-md-5.col-md-offset-2
  %div.col-md-3{'class':'authclass'}
    %h1 Login:
    %div.alert.alert-danger{'ng-show':'err.isError'}
      %div{'ng-repeat':'(field, error) in err.errors'}
        {{error}}
    %form{'name':'signInForm'}
      .error{'ng-show':'error.message'}
      %div
        %md-input-container.md-block
          %input{'type':'text', 'placeholder':'Email or Username','ng-model':'user.login', 'required':'required', 'name':'loginField', 'autocomplete':'off', 'minlength':'6', 'maxlength':'30'}
          %div{'ng-messages':'signInForm.loginField.$error', 'role':'alert', 'class':'errors'}
            %div{'ng-repeat':'(type, message) in errorMessages'}
              %div{'ng-message-exp':'type'}
                Email or Username {{message}}
      %div
        %md-input-container.md-block
          %input{'type':'password', 'placeholder':'Password','ng-model':'user.password', 'required':'required', 'name':'passwordField', 'autocomplete':'off', 'minlength':'8', 'maxlength':'30'}
          %div{'ng-messages':'signInForm.passwordField.$error', 'role':'alert', 'class':'errors'}
            %div{'ng-repeat':'(type, message) in errorMessages'}
              %div{'ng-message-exp':'type'}
                Password {{message}}
      %div
        %p
          %a{'ui-sref': '#', 'title': 'I forgot my password'}
            Forgot your password?
      %div
        %button.btn.btn-block.btn-primary{'ng-click':'login()', 'ng-disabled':'signInForm.$invalid'} Login
      %div
        %br
      %div
        %a.btn.btn-block.btn-social.btn-facebook{href:'/users/auth/facebook'}
          %span.fa.fa-facebook
          Sign in with Facebook
      %div
        %br
        %p
          New User?
          %a{'ui-sref': 'signUp', 'title': 'SignUp Page'}
            Sign Up
